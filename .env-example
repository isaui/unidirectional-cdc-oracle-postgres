# ============================================================
# Kafka Debezium CDC - Environment Configuration
# ============================================================
# Copy this file to .env and update with your own values:
# cp .env-example .env

# KRaft Cluster ID (generate with: docker run --rm confluentinc/cp-kafka:8.1.0 kafka-storage random-uuid)
CLUSTER_ID=your-cluster-id-here

# Admin credentials
KAFKA_ADMIN_PASS=your-admin-password

# Debezium user credentials
DEBEZIUM_PASSWORD=your-debezium-password

# Kafka UI web authentication
KAFKA_UI_USERNAME=admin
KAFKA_UI_PASSWORD=your-ui-password

# ============================================================
# CDC Mode Configuration
# ============================================================
# CDC_MODE: Determines the direction of change data capture
# - POSTGRES: PostgreSQL is source (PostgreSQL CDC -> Oracle Sink)
# - ORACLE: Oracle is source (Oracle CDC -> PostgreSQL Sink)
# WARNING: Only one mode can be active at a time to prevent loops!
CDC_MODE=ORACLE

# ============================================================
# PostgreSQL Database
# ============================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=cdcdb

# ============================================================
# Oracle Database
# ============================================================
ORACLE_PASSWORD=your-oracle-sys-password
ORACLE_DATABASE=CDCDB
ORACLE_APP_USER=APPUSER
ORACLE_APP_PASSWORD=your-oracle-app-password

# Oracle CDC User Password (for Debezium LogMiner)
# Username is hardcoded as c##dbzuser (CDB requirement)
ORACLE_CDC_PASSWORD=your-oracle-cdc-password
